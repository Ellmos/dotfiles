alias shut='systemctl poweroff'
alias reboot='systemctl reboot'
alias :q='exit'

alias ls='ls --color=auto'
alias la='ls -A --color=auto'
alias ll='ls -l --color=auto'
alias grep='grep --color=always'
alias tree='tree -C'
alias c='clear'

alias nv='nvim'
alias vim='nvim'
alias brave='brave-browser'

alias gita='git add .'
alias gitc='git commit -m'
alias gitp='git push'
alias gits='git status'

alias laptop='bash ~/.config/i3/arandr/laptop.sh'
alias monitor='bash ~/.config/i3/arandr/monitor.sh'
alias both='bash ~/.config/i3/arandr/both.sh'

alias banquise='sudo tailscale up && sudo swanctl -q && sudo swanctl -i --child banquise'
alias bluetooth='sudo hciconfig hci0 down && sudo rmmod btusb && sudo modprobe btusb && sudo hciconfig hci0 up && sudo bluetoothctl'

alias changeoutput='bash ~/.config/i3/changeoutput.sh'

alias py='python3.11'
alias up='nmcli con up'

alias delete-log='sudo find /var/log -mtime +30 -type f -delete'
