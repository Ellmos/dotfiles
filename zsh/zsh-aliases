bindkey  "^[[F"   end-of-line
bindkey  "^[[3~"  delete-char

alias :q='exit'
alias reload='source ~/.zshrc'

alias ls='ls --color=auto'
alias la='ls -A --color=auto'
alias ll='ls -l --color=auto'
alias grep='grep --color=always'
alias tree='tree -C'
alias c='clear'
alias cat='bat'

alias nv='nvim'
alias vim='nvim'
alias emacs='nvim'
alias rmswap='rm /home/romain.doulaud/.local/state/nvim/swap/*'


alias ga='git add .'
alias gc='git commit -m'
alias gt='git tag -ma'
alias gp='git push'
alias gpt='git push --follow-tags'
alias gs='git status'
alias gl='git log'
alias glog="git log --all --decorate --graph --oneline"
alias grm='rm $(git rev-parse --show-toplevel)/.git/index.lock'

alias gdb='gdb -tui'
alias gdbb='gdb -tui -ex "set env 'LD_LIBRARY_PATH=.'"'

alias gccc='gcc -Wextra -Wall -Werror -Wvla -std=c99 -pedantic -fsanitize=address -g -o main '
alias g+++='g++ -Wall -Wextra -Werror -pedantic -std=c++20 -Wold-style-cast -fsanitize=address -g -o main'
alias clang+++='clang++ -Wall -Wextra -Werror -pedantic -std=c++20 -Wold-style-cast -fsanitize=address -g -o main'

alias sqllint='cd $(git rev-parse --show-toplevel); sqlfluff lint; cd -'
alias sqlfix='cd $(git rev-parse --show-toplevel); sqlfluff fix; cd -'

